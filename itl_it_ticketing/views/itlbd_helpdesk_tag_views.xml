<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Helpdesk tag view action-->
    <record id="it_itl_bd_helpdesk_tag_action" model="ir.actions.act_window">
        <field name="name">IT ticket Tags</field>
        <field name="res_model">it.itl.bd.helpdesk.tag</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record!
            </p>
        </field>
    </record>
    <!--Helpdesk tag tree view-->
    <record id="it_itl_bd_helpdesk_tag_view_tree" model="ir.ui.view">
        <field name="name">IT ticket tree</field>
        <field name="model">it.itl.bd.helpdesk.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>
