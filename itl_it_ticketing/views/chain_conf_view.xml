<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="helpdesk_chain_form_view">
            <field name="name">Chain.Conf.Form.View</field>
            <field name="model">chain.conf</field>
            <field name="arch" type="xml">
                <form string="LV Product Chain">
                    <!--                    <header>-->
                    <!--                        &lt;!&ndash;                        <button string="Cancel" type="object" name="action_cancel" class="btn btn-danger"/>&ndash;&gt;-->
                    <!--                    </header>-->
                    <sheet>
                        <group string="Chain Information">
                            <group>
                                <field name="name"/>
                                <field name="chain_ids" invisible="1"/>
                            </group>
                            <group>
                                <field name="chain_description"/>
                                <field name="chain_address"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="helpdesk_chain_tree_view">
            <field name="name">Chain.Conf.Tree View</field>
            <field name="model">chain.conf</field>
            <field name="arch" type="xml">
                <tree string="ITL Product Chain">
                    <field name="name"/>
                    <field name="chain_address"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_helpdesk_chain_conf">
            <field name="name">Chain.Configuration</field>
            <field name="res_model">chain.conf</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>